<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
<title>Home</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3 row row-cols-4">
        <% questions.forEach(question => { %>
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="<%= question.coverImageURL %>" class="card-img-top">
                    <div class="card-body">
                      <h5 class="card-title"><%= question.title %></h5>
                      <a href="/question/<%= question._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div> 
    <%- include('./partials/script') %>
</body>
</html>