<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Question</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <form action="/question" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Image of Query</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
              </div>
            <div class="mb-3">
              <label for="title" class="form-label">Title of Question</label>
              <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
            </div>
            <div class="mb-3"> 
                <label for="body" class="form-label">Describe</label>
                <textarea name="body" class="form-control"  id="body"></textarea>
              </div>
              <div class="mb-3"> 
                <button class="btn btn-primary">Submit</button>
              </div>
        </form>
    </div>
    <%- include('./partials/script') %>
</body>
</html>